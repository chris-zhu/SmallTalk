{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors":true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"],
      "/@c/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "./**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
